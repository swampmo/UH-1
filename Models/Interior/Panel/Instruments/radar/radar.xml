<PropertyList>

<path>radar.ac</path>

<animation>
<type>material</type>
<object-name>bg</object-name>
<emission>
<red>1.0</red>
<green>1.0</green>
<blue>1.0</blue>
</emission>
</animation>

<animation>
<type>material</type>
<object-name>sup</object-name>

    <emission>
 <red>1.0</red>
 <green>1.0</green>
 <blue>1.0</blue>
<factor-prop>/controls/lighting/dash-dim</factor-prop>
    </emission>
</animation>

<animation>
<type>material</type>
<object-name>KnobRange</object-name>
<object-name>KnobOnOff</object-name>

    <emission>
 <red>1.0</red>
 <green>1.0</green>
 <blue>1.0</blue>
<factor-prop>/controls/lighting/dash-dim</factor-prop>
    </emission>
</animation>

<animation>
<type>material</type>
<object-name>KnobRange</object-name>
<object-name>KnobOnOff</object-name>

<emission>
<red>1.0</red>
<green>1.0</green>
<blue>1.0</blue>

</emission>
</animation>

<animation>
<type>select</type>
<object-name>radarblade</object-name>
<object-name>bg</object-name>
<condition>
<greater-than>
<property>/b707/ess-bus</property>
<value>20</value>
</greater-than>
<property>/instrumentation/mptcas/on</property>
</condition>
</animation>

<animation>
<type>select</type>
<object-name>bg.001</object-name>
<condition>
<or>
<less-than>
<property>/b707/ess-bus</property>
<value>20</value>
</less-than>
<not><property>/instrumentation/mptcas/on</property></not>
</or>
</condition>
</animation>

<animation>
<type>rotate</type>
<object-name>radarblade</object-name>
<property>/sim/time/elapsed-sec</property>
<factor>40</factor>
<center>
<x-m> 0.0</x-m>
<y-m> 0.0</y-m>
<z-m> 0.0</z-m>
</center>
<axis>
<x>1</x>
<y>0</y>
<z>0</z>
</axis>
</animation>

<animation>
<type>noshadow</type>
<object-name>radarblade</object-name>
<object-name>cover</object-name>
</animation>

<effect>
<inherits-from>Effects/model-transparent</inherits-from>
<object-name>radarblade</object-name>
<object-name>cover</object-name>
</effect>

<!-- the knob animations -->

<animation>
<type>rotate</type>
<object-name>KnobOnOff</object-name>
<property>/instrumentation/mptcas/on</property>
<factor>-90</factor>
<center>
<x-m> 0.0</x-m>
<y-m> 0.0521</y-m>
<z-m>-0.0536</z-m>
</center>
<axis>
<x>1</x>
<y>0</y>
<z>0</z>
</axis>
</animation>

<animation>
<type>pick</type>
<object-name>KnobOnOff</object-name>
<visible>true</visible>
<action>
<name>show info</name>
<button>0</button>
<repeatable>true</repeatable>			
<binding>
<command>property-toggle</command>
<property>/instrumentation/mptcas/on</property>
</binding>
<binding>
<command>property-toggle</command>
<property>/sim/sound/switch1</property>
</binding>
</action>
</animation>

<animation>
<type>rotate</type>
<object-name>KnobRange</object-name>
<property>/instrumentation/mptcas/display-factor</property>
<factor>180</factor>
<center>
<x-m> 0.0</x-m>
<y-m>-0.0509</y-m>
<z-m>-0.0536</z-m>
</center>
<axis>
<x>1</x>
<y>0</y>
<z>0</z>
</axis>
</animation>

<animation>
<type>pick</type>
<object-name>KnobRange</object-name>
<visible>true</visible>
<action>
<name>calibrate fine dec</name>
<button>0</button>
<repeatable>true</repeatable>
<binding>	          
<condition>
<not><property>devices/status/keyboard/shift</property></not>
<not><property>devices/status/keyboard/super</property></not>
</condition>
<command>property-adjust</command>
<property>/instrumentation/mptcas/display-factor</property>
<step>-0.01</step>
<min>0.03</min>
<max>0.62</max>
<wrap>false</wrap>
</binding>
<binding>	          
<condition>
<or>
<property>devices/status/keyboard/shift</property>
<property>devices/status/keyboard/super</property>
</or>
</condition>
<command>property-adjust</command>
<property>/instrumentation/mptcas/display-factor</property>
<step>-0.1</step>
<min>0.03</min>
<max>0.62</max>
<wrap>false</wrap>
</binding>
<binding>
<command>property-toggle</command>
<property>/sim/sound/switch3</property>
</binding>
</action>
<action>
<name>calibrate fine inc</name>
<button>1</button>
<repeatable>true</repeatable>
<binding>	          
<condition>
<not><property>devices/status/keyboard/shift</property></not>
<not><property>devices/status/keyboard/super</property></not>
</condition>
<command>property-adjust</command>
<property>/instrumentation/mptcas/display-factor</property>
<step>0.01</step>
<min>0.03</min>
<max>0.62</max>
<wrap>false</wrap>
</binding>
<binding>	          
<condition>
<or>
<property>devices/status/keyboard/shift</property>
<property>devices/status/keyboard/super</property>
</or>
</condition>
<command>property-adjust</command>
<property>/instrumentation/mptcas/display-factor</property>
<step>0.1</step>
<min>0.03</min>
<max>0.62</max>
<wrap>false</wrap>
</binding>
<binding>
<command>property-toggle</command>
<property>/sim/sound/switch3</property>
</binding>
</action>
<action>
<name>calibrate fine dec</name>
<button>3</button>
<repeatable>true</repeatable>
<binding>	          
<condition>
<not><property>devices/status/keyboard/shift</property></not>
<not><property>devices/status/keyboard/super</property></not>
</condition>
<command>property-adjust</command>
<property>/instrumentation/mptcas/display-factor</property>
<step>-0.01</step>
<min>0.03</min>
<max>0.62</max>
<wrap>false</wrap>
</binding>
<binding>	          
<condition>
<or>
<property>devices/status/keyboard/shift</property>
<property>devices/status/keyboard/super</property>
</or>
</condition>
<command>property-adjust</command>
<property>/instrumentation/mptcas/display-factor</property>
<step>-0.1</step>
<min>0.03</min>
<max>0.62</max>
<wrap>false</wrap>
</binding>
<binding>
<command>property-toggle</command>
<property>/sim/sound/switch3</property>
</binding>
</action>
<action>
<name>calibrate fine inc</name>
<button>4</button>
<repeatable>true</repeatable>
<binding>	          
<condition>
<not><property>devices/status/keyboard/shift</property></not>
<not><property>devices/status/keyboard/super</property></not>
</condition>
<command>property-adjust</command>
<property>/instrumentation/mptcas/display-factor</property>
<step>0.01</step>
<min>0.03</min>
<max>0.62</max>
<wrap>false</wrap>
</binding>
<binding>	          
<condition>
<or>
<property>devices/status/keyboard/shift</property>
<property>devices/status/keyboard/super</property>
</or>
</condition>
<command>property-adjust</command>
<property>/instrumentation/mptcas/display-factor</property>
<step>0.1</step>
<min>0.03</min>
<max>0.62</max>
<wrap>false</wrap>
</binding>
<binding>
<command>property-toggle</command>
<property>/sim/sound/switch3</property>
</binding>
</action>
</animation>

