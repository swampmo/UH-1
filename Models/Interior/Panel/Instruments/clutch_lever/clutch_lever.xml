    <animation>
        <type>rotate</type>
       <object-name>lever</object-name>
       <property>controls/rotor/brake</property>
		<factor>97</factor>
      <axis>
        <x> 0 </x>
        <y> 1 </y>
        <z> 0 </z>
      </axis>
      <center>
        <x-m>0</x-m>
        <y-m> 0 </y-m>
        <z-m>0</z-m>  
      </center>
    </animation>

    <animation>
        <type>pick</type>
       <object-name>lever</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
	<binding>
					<command>nasal</command>
					<script>
						var p = "/controls/rotor/brake";
						setprop(p, !getprop(p));
					</script>
