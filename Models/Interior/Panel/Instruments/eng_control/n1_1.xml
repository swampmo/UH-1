<PropertyList>

<path>instr_n1.ac</path>

	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<object-name>needle.001</object-name>
		
		<emission>
			<red>1.0</red>
			<green>1.0</green>
			<blue>1.0</blue>
			<factor-prop>/controls/lighting/dash-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<object-name>needle.001</object-name>
		<object-name>shadow</object-name>
		
		<emission>
		  <red>1.0</red>
		  <green>1.0</green>
		  <blue>1.0</blue>
		  <factor-prop>/controls/lighting/dash-dim</factor-prop>
		</emission>
	</animation>	

	<animation>
		<type>noshadow</type>
		<object-name>shadow</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>shadow</object-name>
  </effect>

	<animation>
		<type>rotate</type>
		<object-name>needle</object-name>
		<property>/rotors/main/rpm</property>
		<interpolation>
		  <entry><ind>  0.0</ind><dep>    0.0</dep></entry>
		  <entry><ind>100.0</ind><dep>  270.0</dep></entry>
		</interpolation>
		<axis>
		  <x>-1</x>
		  <y>0</y>
		  <z>0</z>
		</axis>
	</animation>

	<animation> 
		<type>rotate</type>
		<object-name>needle.001</object-name>
		<property>/engines/engine[0]/n1</property>
    <factor>36</factor>
		<center>   
		  <x-m> 0 </x-m> 
		  <y-m>-0.00278 </y-m>
			<z-m> 0.0108 </z-m>
		</center>
		<axis> 
		  <x> -1 </x>
		  <y>  0 </y>
		  <z>  0 </z>
		</axis>
	</animation>

</PropertyList>
