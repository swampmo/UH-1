<!-- LIGHTING -->

  <animation>
        <object-name>base</object-name>
        <object-name>knob_1</object-name>
	<object-name>knob_2</object-name>
	<object-name>knob_3</object-name>
	<object-name>knob_4</object-name>
	<object-name>knob_5</object-name>
        <object-name>comm1_btn</object-name>
        <object-name>comm2_btn</object-name>
        <object-name>vor_btn</object-name>
        <object-name>tacan_btn</object-name>
     <type>material</type>
     <emission>
      <factor-prop>/controls/lighting/dash-dim</factor-prop>
      <red>   0 </red>
      <green> 1.0 </green>
      <blue>  0 </blue>
    </emission>
  </animation> 

  <animation>
        <object-name>comm1_on</object-name>
        <object-name>comm2_on</object-name>
        <object-name>vor_on</object-name>
        <object-name>tacan_on</object-name>
     <type>material</type>
     <emission> 
        <red>  1 </red>
        <green>1</green>
        <blue> 1</blue>
      </emission>
  </animation> 



<!-- COMM1 -->
    <animation>
        <type>rotate</type>
        <object-name>knob_2</object-name>
        <property>instrumentation/comm/volume</property>
        <interpolation>
            <entry><ind>0</ind><dep>0</dep></entry>
            <entry><ind>1</ind><dep>270</dep></entry>
        </interpolation>
        <center>
            <x-m>0.020</x-m>
            <y-m>-0.024</y-m>
            <z-m>-0.105</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>knob_2</object-name>
        <action>
            <button>3</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/comm/volume</property>
                <step>-0.1</step>
                <min> 0 </min>
                <max> 1 </max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>


    <animation>
        <type>pick</type>
        <object-name>knob_2</object-name>
        <action>
            <button>4</button>
