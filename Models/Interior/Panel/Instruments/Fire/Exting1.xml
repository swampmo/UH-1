<?xml version="1.0"?>
<PropertyList>

	<path>canopy-controls.ac</path>

	<animation> 
		<type>rotate</type>
		<object-name>canopy-switch</object-name>
    <command>property-toggle</command>
    <property>controls/engines/engine[0]/cutoff</property>
        <interpolation>
            <entry><ind>0</ind><dep>-25</dep></entry>
			<entry><ind>1</ind><dep>25</dep></entry>
        </interpolation>

		<center>
			<x-m>0.0026</x-m>
			<y-m>0.0000</y-m>
			<z-m>0.0270</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>

    <animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>canopy-switch</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>controls/engines/engine/cutoff</property>
			</binding>
		</action>
	</animation>



	<!-- lighting -->

	<animation> 
		<object-name>mount</object-name>
		<type>material</type>
		<emission> 
			<factor-prop>controls/lighting/dash-dim</factor-prop>
				<red>1.0</red>
			<green>1.0</green>
			<blue>1.0</blue>
		</emission>
	</animation>
	<animation> 
		<object-name>canopy-switch</object-name>
		<type>material</type>
		<emission> 
			<factor-prop>controls/lighting/dash-dim</factor-prop>
			<red>1.0</red>
			<green>1.0</green>
			<blue>1.0</blue>
		</emission>
	</animation>
	<animation> 
		<object-name>handle</object-name>
		<type>material</type>
		<emission> 
			<factor-prop>controls/lighting/dash-dim</factor-prop>
			<red>1.0</red>
			<green>1.0</green>
			<blue>1.0</blue>
		</emission>
	</animation>

	<animation>
		<object-name>canopy-control-group</object-name>
		<type>noshadow</type>
	</animation>

	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>35</max-m>
	</animation>

</PropertyList>
