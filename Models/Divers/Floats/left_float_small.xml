<!--emergency float -->

<PropertyList>


<path>left_float_small.ac</path>


 <animation>

  <type>scale</type>

  <object-name>left_float_L</object-name>

  <property>sim/multiplay/generic/float[0]</property>

  <x-min>1.0</x-min>

  <y-min>1.0</y-min>

  <z-min>1.0</z-min>

  <x-factor>2</x-factor>

  <y-factor>10</y-factor>

  <z-factor>8</z-factor>
 
</animation>


<animation>

 <type>scale</type>

 <object-name>left_float_R</object-name>
 <property>sim/multiplay/generic/float[0]</property>

 <x-min>1.0</x-min>

 <y-min>1.0</y-min>

 <z-min>1.0</z-min>

 <x-factor>2</x-factor>

 <y-factor>10</y-factor>

 <z-factor>8</z-factor>

</animation>
<animation>

 <type>scale</type>

 <object-name>left_float</object-name>
 <property>sim/multiplay/generic/float[0]</property>

 <x-min>1.0</x-min>

 <y-min>1.0</y-min>

 <z-min>1.0</z-min>

 <x-factor>2</x-factor>

 <y-factor>8</y-factor>

 <z-factor>8</z-factor>

</animation>


<animation>

   <type>select</type>

   <object-name>left_float_L</object-name>

   <object-name>left_float_R</object-name>
   <object-name>left_float</object-name>
 <condition>

     <property>sim/model/uh1/emergencyfloats</property>

   </condition>

 </animation>


 <animation>

    <type>pick</type>

    <object-name>left_float_L</object-name>

    <object-name>left_float_R</object-name>
    <object-name>left_float</object-name>
 <action>

      <button>0</button>

      <repeatable>true</repeatable>

      <binding>

        <command>nasal</command>

        <script>uh1.toggle_floats();</script>

      </binding>

    </action>

 </animation>


</PropertyList>
